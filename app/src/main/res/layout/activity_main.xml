<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text"/>

    <EditText
        android:id="@+id/fibonacci_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/main_edit_hint"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLesson6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_service_data"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/btnLesson1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/open_screen" />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"/>

</LinearLayout>